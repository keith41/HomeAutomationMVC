    </head>
    <body>
        <header >
            <div class="content-wrapper">
                <div class="float-left">                    
                    <a href="@Url.Action("Index", "Home")" title="Home" class="site-title">
                    <img src="~/images/logoAuto2.jpeg" alt="Logo" height="70" width="400">                        
                   </a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>                            
                            <li>@Html.ActionLink("Temperature", "Monitor", "Automation")</li>
                            <li>@Html.ActionLink("Control Relays", "Switch", "Automation")</li>
                            <li>@Html.ActionLink("Schedule Tasks", "Schedule", "Automation")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - AutoPonics</p>
                </div>
            </div>
        </footer>        

        @RenderSection("scripts", required: false)
    </body>
