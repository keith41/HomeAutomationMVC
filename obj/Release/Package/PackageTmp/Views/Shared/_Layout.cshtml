<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Environment Monitor & Control</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        @Styles.Render("~/Content/css")  
        @Styles.Render("~/Content/themes/base/css")       
        @Scripts.Render("~/bundles/modernizr")

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootStrap") 

        <link href="/MVC4/Content/LED.css" rel="stylesheet" />
        <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
        <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-checkbox/1.4.0/bootstrap-checkbox.min.js"></script>
        
        <script>
            jQuery(document).ready(function ($) {

                $('#mainHeaderImage').css({ 'height': '70px', 'width': '90%' });

                @*
                // get initial top position of menu
                var init = $('#cssmenu').offset().top;
                // listen to window scroll event
                $(window).scroll(function () {
                    // if top of window scrolled past top of menu
                    if ($(window).scrollTop() > init) {
                        // fix the menu to the top of the page
                        $('#cssmenu').css({
                            top: 0,
                            position: 'fixed'
                        });
                    } else {
                        // otherwise put it back in its regular position
                        $('#cssmenu').css('position', 'relative');
                    }
                });
                *@

            });
        </script> 

    </head>
    <body>
        
        <header >            
            <div class="content-wrapper">
                <div class="float-left">                    
                    <a href="@Url.Action("Index", "Home")" title="Home" class="site-title">
                    <img id="mainHeaderImage" src="~/images/logoAuto2.jpeg" alt="Logo" >                        
                   </a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>                            
                            <li>@Html.ActionLink("Temperature", "Monitor", "Automation")</li>
                            <li>@Html.ActionLink("Control Relays", "Switch", "Automation")</li>
                            <li>@Html.ActionLink("Schedule Tasks", "Schedule", "Automation")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>        

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>        

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - AutoPonics</p>
                </div>
            </div>
        </footer>        

        @RenderSection("scripts", required: false)
    </body>
</html>
